<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF4444"
    android:keepScreenOn="true"
    android:orientation="vertical"
    tools:context=".MainActivity" >
	
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:paddingTop="10dp" >
        
        <EditText
	        android:id="@+id/etPlayerName1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@drawable/smaller_edit_text_border"
	        android:ems="8"
	        android:gravity="center"
	        android:hint="Player 1"
	        android:imeOptions="actionDone"
	        android:maxLength="18"
	        android:layout_weight="1" />
        
        <EditText 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
        
        <EditText
	        android:id="@+id/etPlayerName2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@drawable/smaller_edit_text_border"
	        android:ems="8"
	        android:gravity="center"
	        android:hint="Player 2"
	        android:imeOptions="actionDone"
	        android:maxLength="18"
	        android:layout_weight="1" />  
        
    </LinearLayout>
    
    <LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="3" >
        
        <EditText
	        android:id="@+id/etPlayer1Score"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@drawable/smaller_edit_text_border"
	        android:ems="7"
	        android:gravity="center"
	        android:layout_gravity="center_vertical"
	        android:hint="P1 Score"
	        android:imeOptions="actionDone"
	        android:inputType="number"
	        android:maxLength="6"
	        android:layout_weight="1" />
        
        <ImageButton
	        android:id="@+id/ibPlayer"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_above="@+id/etScore"
	        android:layout_centerHorizontal="true"
	        android:background="@null"
	        android:src="@drawable/right"
	        android:layout_weight="1" />
        
        <EditText
	        android:id="@+id/etPlayer2Score"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="@drawable/smaller_edit_text_border"
	        android:ems="7"
	        android:gravity="center"
	        android:layout_gravity="center_vertical"
	        android:hint="P2 Score"
	        android:imeOptions="actionDone"
	        android:inputType="number"
	        android:maxLength="6"
	        android:layout_weight="1" />
        
    </LinearLayout>
 
    <ImageButton
        android:id="@+id/ibCounters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/adView"
        android:layout_alignParentRight="true"
        android:background="@null"
        android:src="@drawable/counters" />

    <EditText
        android:id="@+id/etScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ibTools"
        android:layout_alignLeft="@+id/ibPlayer"
        android:layout_alignRight="@+id/ibPlayer"
        android:layout_alignTop="@+id/ibScoreAdd"
        android:background="@drawable/edit_text_border"
        android:ems="7"
        android:gravity="center"
        android:hint="Modifier"
        android:imeOptions="actionDone"
        android:inputType="number"
        android:maxLength="6" />

    <ImageButton
        android:id="@+id/ibTools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/adView"
        android:layout_alignParentLeft="true"
        android:background="@null"
        android:src="@drawable/tools" />

    <ImageButton
        android:id="@+id/ibRestart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/adView"
        android:layout_toRightOf="@+id/ibScoreSub"
        android:background="@null"
        android:src="@drawable/restart" />

    <ImageButton
        android:id="@+id/ibScoreSub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ibRestart"
        android:layout_toLeftOf="@+id/etScore"
        android:background="@null"
        android:src="@drawable/minus" />



    <ImageButton
        android:id="@+id/ibScoreAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ibRestart"
        android:layout_toRightOf="@+id/etScore"
        android:background="@null"
        android:src="@drawable/plus" />
	
    

    




</LinearLayout>